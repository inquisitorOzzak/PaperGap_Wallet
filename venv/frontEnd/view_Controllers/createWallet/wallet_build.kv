<FloatLayout>:

    Label:
        text: "In order to access your bitcoin wallet we will generate a random mnemonic"
        font_size: 23
        size_hint: 1, 0.2
        pos_hint: {"top": 0.94}


    Spinner:
        id: coin_spinner_id
        text: "Coin type"
        values: ["Bitcoin", "Bitcoin Cash", "Dogecoin"]
        on_text : root.coin_Spinner_Clicked(coin_spinner_id.text)
        size_hint: 0.3, 0.1
        pos_hint: {"top": 0.65, "x": 0.02}
        background_color: (0.92156863, 0.88235294, 0.88235294, 1)

    Spinner:
        id: word_num_spinner_id
        text: "Word Number"
        values: ["12","16", "20", "24"]
        on_text : root.word_Spinner_Clicked(word_num_spinner_id.text)
        size_hint: 0.3, 0.1
        pos_hint: {"top": 0.65, "x":0.35}
        background_color: (0.92156863, 0.88235294, 0.88235294, 1)

    Spinner:
        id: language_spinner_id
        text: "Mnemonic Lanuage"
        values: ["English", "Español", "Français"]
        on_text : root.language_Spinner_Clicked(language_spinner_id.text)
        size_hint: 0.3, 0.1
        pos_hint: {"top": 0.65, "x":0.68}
        background_color: (0.92156863, 0.88235294, 0.88235294, 1)


    Button:
        size: 180, 330
        text: "Generate Wallet"
        pos_hint: {"y": 0.05, "x": 0.25}
        size_hint: 0.5, 0.15
        background_color: (0,0,1,1)
        font_size: 25








